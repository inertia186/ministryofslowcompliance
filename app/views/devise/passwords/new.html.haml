%legend Forgot your password?
.row-fluid
  .span12

    = horizontal_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      = devise_error_messages!
      = f.h_email_field :email, :autofocus => true
      
      .form-actions
        = f.submit 'Send me reset password instructions', class: 'btn btn-success', "data-disable-with" => "Sending instructions ..."
      
= render "devise/shared/links"
