= horizontal_form_for @post do |f|
  - if @post.persisted?
    %div
      = @post.title
  - else
    = f.h_text_field :title, :autofocus => true
  = f.h_text_area :body, class: 'input-block-level'
  %small
    Note:
    = link_to 'Markdown Allowed', 'https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet', target: 'cheatsheet'
  .form-actions
    = f.submit class: 'btn btn-primary', "data-disable-with" => "Saving ..."
    = link_to 'Cancel', posts_path, class: 'btn'
    - if @post.persisted? && @post.cached_author == current_user
      = link_to 'Destroy', @post, :confirm => 'Are you sure?', :method => :delete, class: 'btn btn-danger pull-right', "data-disable-with" => "Destroying ..."
